<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.StudentRegistration"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:padding="10dp">

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student's:"
        android:textColor="@color/colorPurple500"
        android:fontFamily="@font/adamina"
        android:textSize="40sp"
        android:layout_gravity="start"/>

    <View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/listDivider" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Name:"
        android:textSize="20sp"
        android:textColor="@color/colorPurple500"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Student_name"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Email:"
        android:textSize="20sp"
        android:textColor="@color/colorPurple500"/>
    <EditText
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextSignUpEmail" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Set Password"
        android:textColor="@color/colorPurple500"
        android:textSize="20sp"/>
    <EditText
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextSignUpPassword"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Class"
        android:textColor="@color/colorPurple500"
        android:textSize="20sp"/>

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/Choose_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:text="Choose Class"
        android:textAlignment="viewStart"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Phone Number"
        android:textColor="@color/colorPurple500"
        android:textSize="20sp"/>
    <EditText
        android:inputType="phone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Students_phno"/>

    <Button
        android:id="@+id/btnSignUp"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Done" />

</LinearLayout>