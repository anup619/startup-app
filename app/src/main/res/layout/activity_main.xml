<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="@color/colorPurple500">

    <ImageView
        android:id="@+id/splash_screen_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:transitionName="logo_image"
        android:src="@drawable/splash_screen"/>

    <TextView
        android:id="@+id/App_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_screen_icon"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/adamina"
        android:text="Shiksha App"
        android:transitionName="logo_text"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />
    <TextView
        android:id="@+id/App_discrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One app for Student and Tutors"
        android:layout_below="@+id/App_name"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>